{
  "name": "@launchstack/mongo",
  "version": "0.0.1-alpha.1",
  "description": "A typesafe MongoDB library by LaunchStack, providing a fully typesafe and lightweight wrapper over the official MongoDB driver, with simplified CRUD operations and customizable collection definitions.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "type-test": "tsd",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "release": "standard-version",
    "release:alpha": "standard-version --prerelease alpha",
    "release:beta": "standard-version --prerelease beta"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/launch-stack/data.git"
  },
  "keywords": [
    "typescript",
    "mongodb",
    "typesafe",
    "launchstack",
    "orm",
    "database",
    "wrapper",
    "crud",
    "collections",
    "repository",
    "mongo-client",
    "mongo-repo",
    "document-mapping",
    "type-safety",
    "typescript-library"
  ],
  "author": "Jvhaile",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/launch-stack/mongo/issues"
  },
  "homepage": "https://github.com/launch-stack/mongo#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.13.0",
    "standard-version": "^9.5.0",
    "tsd": "^0.31.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "mongodb": "^6.10.0",
    "zod": "^3.23.8"
  }
}
